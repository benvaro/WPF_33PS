<Window x:Class="Binding_via_codeBehind.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Binding_via_codeBehind"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="468.657">
    <StackPanel>
        <Slider Name="slider" Minimum="5" Maximum="100" Margin="20" 
                IsSnapToTickEnabled="True" 
                TickPlacement="BottomRight"
                TickFrequency="10"
                />
        <TextBlock x:Name="text"
                   Margin="20"
                   Text="Hello"
                   FontSize="20"
                   />
        <Button Width="100" Click="Button_Click">Clear Binding</Button>
        <TextBox Margin="20" Name="textBox"/>
    </StackPanel>
</Window>
