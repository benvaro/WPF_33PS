<Window x:Class="WPF_INotify.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_INotify"
        mc:Ignorable="d"
        Title="MainWindow" Height="400.746" Width="408.209">
    <StackPanel Margin="20">
        <Label Content="{Binding Name, UpdateSourceTrigger=PropertyChanged}"/>
        <Label Content="{Binding LastName}"/>
        <Button Width="100" Click="Button_Click"
            >Change</Button>
    </StackPanel>
</Window>
